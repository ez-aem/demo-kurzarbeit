{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "baseUrl": ".",
    "removeComments": true,
    "allowJs": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "paths": {
      "@ez-aem/*": ["./ez-aem/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [ "./src/**/*.ts" ]
}
